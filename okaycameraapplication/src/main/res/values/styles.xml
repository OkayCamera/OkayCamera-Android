<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>


        <!-- TODO: use defined animation , but this way is not best way so use code way
        <item name="android:windowAnimationStyle">@style/windowAnim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/LunchAnim</item>
        -->
    </style>

    <!-- depread app lunch Animations -->
    <style name="LunchAnim" parent="@android:style/Animation.Activity">
        <!-- app lunch anim -->
        <item name="android:activityOpenEnterAnimation">@anim/anim_app_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_app_open_exit</item>

        <!--app exit anim -->
        <item name="android:activityCloseEnterAnimation">@anim/anim_app_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_app_close_exit</item>

        <item name="android:taskOpenEnterAnimation">@anim/anim_app_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/anim_app_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/anim_app_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/anim_app_close_exit</item>

        <item name="android:taskToFrontEnterAnimation">@anim/anim_app_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/anim_app_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/anim_app_close_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/anim_app_close_exit</item>
    </style>

    <style name="windowAnim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/anim_app_open_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_app_close_exit</item>
    </style>
</resources>
